{
    "name": "Poetry Cookiecutter",
    "image": "python:3.11-slim",
    "onCreateCommand": "apt-get update && apt-get install --yes git gnupg && pip install commitizen cruft pre-commit && pre-commit install --install-hooks",
    "overrideCommand": true,
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "tamasfe.even-better-toml",
                "visualstudioexptteam.vscodeintellicode"
            ],
            "settings": {
                "editor.formatOnSave": true,
                "editor.rulers": [
                    100
                ],
                "files.autoSave": "onFocusChange"
            }
        }
    }
}